{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src",
    "./types",
    "../../configuration/types"
  ],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts",
    "src/components/*/demos/*",
    "src/demos.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "declarationDir": "lib",
    "paths": {
      "@reactgets/core": [
        "../mantine-core/src"
      ],
      "@reactgets/hooks": [
        "../mantine-hooks/src"
      ],
      "@reactgets/utils": [
        "../mantine-utils/src"
      ],
      "@reactgets/tests": [
        "../mantine-tests/src"
      ]
    }
  },
  "references": [
    {
      "path": "../mantine-core"
    },
    {
      "path": "../mantine-hooks"
    },
    {
      "path": "../mantine-utils"
    },
    {
      "path": "../mantine-tests"
    }
  ]
}