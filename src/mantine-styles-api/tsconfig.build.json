{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src",
    "./types",
    "../../configuration/types"
  ],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts",
    "src/components/*/demos/*",
    "src/demos.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@reactgets/core": [
        "../mantine-core/src"
      ],
      "@reactgets/dates": [
        "../mantine-dates/src"
      ],
      "@reactgets/hooks": [
        "../mantine-hooks/src"
      ],
      "@reactgets/prism": [
        "../mantine-prism/src"
      ],
      "@reactgets/dropzone": [
        "../mantine-dropzone/src"
      ],
      "@reactgets/notifications": [
        "../mantine-notifications/src"
      ],
      "@reactgets/modals": [
        "../mantine-modals/src"
      ],
      "@reactgets/carousel": [
        "../mantine-carousel/src"
      ],
      "@reactgets/tiptap": [
        "../mantine-tiptap/src"
      ]
    }
  },
  "references": [
    {
      "path": "../mantine-core"
    },
    {
      "path": "../mantine-dates"
    },
    {
      "path": "../mantine-hooks"
    },
    {
      "path": "../mantine-prism"
    },
    {
      "path": "../mantine-dropzone"
    },
    {
      "path": "../mantine-carousel"
    },
    {
      "path": "../mantine-notifications"
    },
    {
      "path": "../mantine-modals"
    },
    {
      "path": "../mantine-tiptap"
    }
  ]
}