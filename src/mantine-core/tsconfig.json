{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src",
    "../../configuration/types",
    "../../tests"
  ],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@reactgets/hooks": [
        "../mantine-hooks/src"
      ],
      "@reactgets/styles": [
        "../mantine-styles/src"
      ],
      "@reactgets/utils": [
        "../mantine-utils/src"
      ],
      "@reactgets/tests": [
        "../mantine-tests/src"
      ],
      "@reactgets/storybook": [
        "../mantine-storybook/src"
      ]
    }
  },
  "references": [
    {
      "path": "../mantine-hooks"
    },
    {
      "path": "../mantine-utils"
    },
    {
      "path": "../mantine-styles"
    },
    {
      "path": "../mantine-tests"
    },
    {
      "path": "../mantine-storybook"
    }
  ]
}